
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Device {
  id          String   @id @default(uuid())
  name        String   @db.VarChar(100)
  type        String   @db.VarChar(50) // e.g., "Temperature", "GPS", "Multi-sensor"
  isActive    Boolean  @default(true)
  location    String?  @db.VarChar(255) 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  readings    SensorReading[]
  
  @@map("devices")
}

model SensorReading {
  id         Int      @id @default(autoincrement())
  deviceId   String
  device     Device   @relation(fields: [deviceId], references: [id])
  
  value      Float
  unit       String   @db.VarChar(20)
  
  latitude   Float? 
  longitude  Float?
  
  recordedAt DateTime @default(now())
  
  @@map("sensor_readings")
  @@index([deviceId, recordedAt])
}

model Venta {
  id          Int      @id @default(autoincrement())
  producto    String
  categoria   String   // Para filtrar (ej: Electr칩nica, Ropa)
  monto       Float    // Para sumar en gr치ficos
  cantidad    Int
  fecha       DateTime @default(now()) // Para filtrar por rango
  vendedor    String?
  region      String?  // Para gr치fico de torta por regi칩n

  @@map("ventas")
}