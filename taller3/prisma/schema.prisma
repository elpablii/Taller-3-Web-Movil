generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Device represents the physical hardware sending data
model Device {
  id          String   @id @default(uuid())
  name        String   @db.VarChar(100)
  type        String   @db.VarChar(50) // e.g., "Temperature", "GPS", "Multi-sensor"
  isActive    Boolean  @default(true)
  location    String?  @db.VarChar(255) // Static location description if applicable
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  readings    SensorReading[]
  
  @@map("devices")
}

// SensorReading represents the actual data stream (formerly DataMobile)
model SensorReading {
  id         Int      @id @default(autoincrement())
  deviceId   String
  device     Device   @relation(fields: [deviceId], references: [id])
  
  value      Float
  unit       String   @db.VarChar(20)
  
  // Optional location data for mobile sensors
  latitude   Float? 
  longitude  Float?
  
  recordedAt DateTime @default(now())
  
  @@map("sensor_readings")
  @@index([deviceId, recordedAt])
}
